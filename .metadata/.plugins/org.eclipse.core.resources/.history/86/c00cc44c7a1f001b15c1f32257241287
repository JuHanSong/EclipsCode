import java.sql.DataTruncation;
import java.util.Arrays;
import java.util.Scanner;

public class Testr {
	
	public static void main(String[] args) {
		/*
		 1. 두 수의 더하기를 맞추는 문제를 지속적으로 출제하는
		  프로그램입니다.
		  
		 2. 2가지의 정수를 1~100사이의 난수를 발생시켜서
		  지속적으로 문제를 출제한 후 사용자가 0을 입력하면
		  반복문을 탈출시키세요.
		  
		 3. 종료 이후에 정답 횟수와 오답 횟수를 각각 출력하세요.
		 */
		
		int num1, num2, pCount = 0, result = 0, fCount = 0; 
		Scanner sc = new Scanner(System.in);
		
		while(true) {
			System.out.println("더하기 퀴즈 입니다.");
			num1 = (int)(Math.random()*100)+1;
			num2 = (int)(Math.random()*100)+1;
			
			System.out.print(num1 + " + " + num2 + " = " );
			result = sc.nextInt();
			
			if(result == (num1 + num2)) {
				pCount++;
				System.out.println("정답입니다.");
			}else if(result!= (num1 +num2)) {
				fCount++;
				System.out.println("오답입니다.");
			}else if (result == 0) {
				break;
			}
			
		}
		
	}
}
